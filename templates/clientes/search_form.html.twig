{{ form_start(form, { attr: {'class': 'form-inline'} }) }}
<div class="form-group">
    {{ form_label(form.cliente) }}
    {{ form_widget(form.cliente, {attr: {class: 'form-control'} }) }}
</div>
<div class="form-group">
    {{ form_label(form.facturable) }}
    {{ form_widget(form.facturable, {attr: {class: 'form-control'} }) }}
</div>
<div class="form-group">
    {{ form_label(form.fecha_inicio) }}
    <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
        {{ form_widget(form.fecha_inicio, {attr: {class: 'form-control'} }) }}
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.fecha_fin) }}
    <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
        {{ form_widget(form.fecha_fin, {attr: {class: 'form-control'} }) }}
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
</div>

<button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
{{ form_end(form) }}


