{% extends 'layout.html.twig' %}

{% set active_page = 'clientes' %}

{% block content %}
    <h1>Cliente {{ cliente.nombre }}</h1>
    <hr/>

    <div class="panel panel-success">
        <div class="panel-heading">
            <h2 class="panel-title">Resumen de peticiones</h2>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Número de peticiones</th>
                    <th>Número de salidas</th>
                </tr>
            </thead>
            <tbody>
                {% for tipo in resumen %}
                <tr>
                    <td>{{ tipo.facturable ==  1 ?  'Facturable' : 'No Facturable' }}</td>
                    <td>{{ tipo.entradas|default(0) }}</td>
                    <td>{{ tipo.salidas|default(0) }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <hr/>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de usuarios</h3>
        </div>
        {% include 'usuarios/tabla_usuarios.html.twig' with {'usuarios': usuarios} %}
    </div>


{% endblock content %}