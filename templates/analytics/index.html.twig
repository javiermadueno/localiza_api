    <div id="container"></div>



{% endblock %}

{% block javascript %}
    <script src="/components/highcharts/highcharts.js"></script>
    <script>
        $(function () {
            $.getJSON('{{ path('peticion_resumen') }}', function (data) {

                $.each(data, function(row){

                });

                $('#container').highcharts({
                    chart: {
                        zoomType: 'x'
                    },
                    title: {
                        text: 'Peticiones'
                    },
                    xAxis: {
                        type: 'datetime',
                        dateTimeLabelFormats: {
                            day: '%e de %b'
                        }
                    },
                    yAxis: {
                        title: {
                            text: 'NÃºmero de peticiones'
                        }
                    },
                    legend: {
                        enabled: false
                    },
                    plotOptions: {
                        area: {
                            fillColor: {
                                linearGradient: {
                                    x1: 0,
                                    y1: 0,
                                    x2: 0,
                                    y2: 1
                                },
                                stops: [
                                    [0, Highcharts.getOptions().colors[0]],
                                    [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                                ]
                            },
                            marker: {
                                radius: 2
                            },
                            lineWidth: 1,
                            states: {
                                hover: {
                                    lineWidth: 1
                                }
                            },
                            threshold: null
                        }
                    },

                    series: [{
                        type: 'area',
                        name: 'Peticiones',
                        data: data
                    }]
                });
            });
        });
    </script>
{% endblock %}
