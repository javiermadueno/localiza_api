{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Por favor, introduce tus credenciales</h3>
                    </div>
                    <div class="panel-body">
                        <form class="form-signin" action="{{ path('admin_login_check') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label for="_username" class="sr-only">usuario</label>
                                    <input type="text" name="_username" value="{{ last_username }}" id="username"
                                           class="form-control" placeholder="usuario" required="" autofocus="">
                                </div>

                                <div class="form-group">
                                    <label for="_password" class="sr-only">Password</label>
                                    <input type="password" name="_password" value="" class="form-control"
                                           placeholder="Password"
                                           required="">
                                </div>
                            </fieldset>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Entra</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
        {% if error %}
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <p class="alert alert-danger">{{ error }}</p>
                </div>
            </div>
        {% endif %}
    </div>

{% endblock body %}